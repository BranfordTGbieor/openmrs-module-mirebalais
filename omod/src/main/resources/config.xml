<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>
		${project.parent.groupId}.${project.parent.artifactId}
	</package>
	<author>PIH</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>
		https://dev.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf
	</updateURL>
	<require_version>${openMRSVersion}</require_version>

	<require_modules>
		<require_module version="${uiframeworkVersion}">
			org.openmrs.module.uiframework
		</require_module>
		<require_module version="${appframeworkVersion}">
			org.openmrs.module.appframework
		</require_module>
		<require_module version="${metadatasharingVersion}">
			org.openmrs.module.metadatasharing
		</require_module>
		<require_module version="${htmlformentryVersion}">
			org.openmrs.module.htmlformentry
		</require_module>
		<require_module version="${htmlformentry19extVersion}">
			org.openmrs.module.htmlformentry19ext
		</require_module>
		<require_module version="${calculationVersion}">
			org.openmrs.calculation
		</require_module>
		<require_module version="${reportingVersion}">
			org.openmrs.module.reporting
		</require_module>
		<require_module version="${idgenVersion}">
			org.openmrs.module.idgen
		</require_module>
		<require_module version="${patientregistrationVersion}">
			org.openmrs.module.patientregistration
		</require_module>
	</require_modules>

	<activator>
		${project.parent.groupId}.${project.parent.artifactId}.MirebalaisHospitalActivator
	</activator>

	<mappingFiles>
	</mappingFiles>

	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>

    <!-- Global Properties -->
    <globalProperty>
        <property>mirebalais.mirthAddress</property>
        <defaultValue>127.0.0.1</defaultValue>
        <description>
            IP address of the Mirth server to communication with
        </description>
    </globalProperty>

    <globalProperty>
        <property>mirebalais.mirthAdminPort</property>
        <defaultValue>8443</defaultValue>
        <description>
            Port the Mirth server uses for administrative communications
        </description>
    </globalProperty>

    <globalProperty>
        <property>mirebalais.mirthInputPort</property>
        <defaultValue>6661</defaultValue>
        <description>
            Port the Mirth server uses receiving incoming communications
        </description>
    </globalProperty>

    <globalProperty>
        <property>mirebalais.mirthUsername</property>
        <defaultValue>mirth</defaultValue>
        <description>
            Username to use when connecting to Mirth server
        </description>
    </globalProperty>

    <globalProperty>
        <property>mirebalais.mirthPassword</property>
        <defaultValue>Mirth123</defaultValue>
        <description>
            Password to use when connecting to Mirth server
        </description>
    </globalProperty>

    <globalProperty>
        <property>mirebalais.mirthDirectory</property>
        <defaultValue>/opt/mirthconnect</defaultValue>
        <description>
            Directory where the Mirth client resides on the server
        </description>
    </globalProperty>

</module>

