<htmlform formUuid="d29a49b1-957b-4bcb-b192-07484de4165b" formName="Brief post-operative note"
          formEncounterType="c4941dee-7a9b-4c1c-aa6f-8193e9e5e4e5" formVersion="1.0">

    <h2>Brief Operative Note (v1.0)</h2>

    <div class="hidden" id="encounter-details" sectionTag="section" headerStyle="title" headerLabel="Encounter Details">
        <fieldset>
            <legend>When?</legend>
            <label>When?</label>

            <encounterDate default="now" showTime="true"/>
        </fieldset>

        <fieldset>
            <legend>Who?</legend>
            <label>Who?</label>

            <encounterProviderAndRole default="currentUser" encounterRole="9b135b19-7ebe-4a51-aea2-69a53f9383af"
                    required="true"/>
        </fieldset>

        <fieldset>
            <legend>Where?</legend>
            <label>Where?</label>

            <encounterLocation default="SessionAttribute:emrContext.sessionLocationId"/>
        </fieldset>
    </div>

    <section id="surgery" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerLabel="Service/team">

        <p>
            <label>Surgical service</label>
            <obs conceptId="PIH:Surgical service"/>
        </p>

        <p>
            <label>Attending Surgeon</label>
            <encounterProviderAndRole encounterRole="9b135b19-7ebe-4a51-aea2-69a53f9383af" required="true"/>
        </p>

        <p>
            <label>Assistants</label>
            <encounterProviderAndRole encounterRole="6e630e03-5182-4cb3-9a82-a5b1a85c09a7" required="false"/>
            <encounterProviderAndRole encounterRole="6e630e03-5182-4cb3-9a82-a5b1a85c09a7" required="false"/>
            <label>other</label>
            <obs conceptId="PIH:Name of assistant surgeon"/>
        </p>

        <p>
            <label>Anesthesiologist</label>
            <encounterProviderAndRole encounterRole="de11b25c-a641-4630-9524-5b85ece9a4f8" required="false"/>
            <encounterProviderAndRole encounterRole="de11b25c-a641-4630-9524-5b85ece9a4f8" required="false"/>
        </p>

        <p>
            <label>Nurse</label>
            <encounterProviderAndRole encounterRole="98bf2792-3f0a-4388-81bb-c78b29c0df92" required="false"/>
            <encounterProviderAndRole encounterRole="98bf2792-3f0a-4388-81bb-c78b29c0df92" required="false"/>
        </p>

    </section>

    <section id="surgery" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerLabel="Description">

        <p>
            <label>Pre-operative Diagnoses</label>

            <obs conceptId="PIH:Pre-surgery diagnosis" answerClasses="Diagnosis" style="autocomplete"/>
            <obs conceptId="PIH:Pre-surgery diagnosis" answerClasses="Diagnosis" style="autocomplete"/>
            <obs conceptId="PIH:Pre-surgery diagnosis" answerClasses="Diagnosis" style="autocomplete"/>

        </p>

        <p>
            <label>Post-operative Diagnoses</label>

            <obs conceptId="PIH:Post-surgery diagnosis" answerClasses="Diagnosis" style="autocomplete"/>
            <obs conceptId="PIH:Post-surgery diagnosis" answerClasses="Diagnosis" style="autocomplete"/>
            <obs conceptId="PIH:Post-surgery diagnosis" answerClasses="Diagnosis" style="autocomplete"/>

        </p>

        <p>
            <label>Procedures performed</label>

            <obs conceptId="PIH:Surgical procedure" answerClasses="Procedure" style="autocomplete"/>
            <obs conceptId="PIH:Surgical procedure" answerClasses="Procedure" style="autocomplete"/>
            <obs conceptId="PIH:Surgical procedure" answerClasses="Procedure" style="autocomplete"/>
            <br/>
            <obs conceptId="PIH:Surgical procedure" answerClasses="Procedure" style="autocomplete"/>
            <obs conceptId="PIH:Surgical procedure" answerClasses="Procedure" style="autocomplete"/>

        </p>

        <p>
            <label>Anesthesia</label>
            <obs conceptId="PIH:Type of anesthesia"/>
        </p>

        <p>
            <label>Emergency/Urgent</label>
            <obs conceptId="PIH:Emergency" style="radio" answerConceptIds="PIH:NO,PIH:YES"
                 answerLabels="no,yes" answerSeparator="" />
        </p>

        <p class="input-position-class">
            <label>Scheduled/Elective</label>
            <obs conceptId="PIH:Scheduled surgery" style="radio" answerConceptIds="PIH:NO,PIH:YES"
                 answerLabels="no,yes" answerSeparator=""/>

        </p>

        <p class="input-position-class">
            <label>Planned return to OR</label>
            <obs conceptId="PIH:Planned return to operating room" style="radio" answerConceptIds="PIH:NO,PIH:YES"
                 answerLabels="no,yes" answerSeparator=""/>

        </p>

        <p>
            <label>Wound Classification</label>
            <obs conceptId="PIH:Classifications of surgical wounds"/>
        </p>

    </section>

    <section id="surgery" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerLabel="Ins and Outs">
        <p>
            <label>Fluids administered</label>
            <obsgroup groupingConceptId="PIH:IVF construct">
                <label>IVF</label>
                <obs conceptId="PIH:IVF administered"/>
                <obs conceptId="PIH:IVF volume" showUnits="true"/>
            </obsgroup>
            <label>Transfusion</label>
            <obs conceptId="PIH:Transfusion status" style="radio"
                 answerConceptIds="PIH:NO,PIH:YES" answerLabels="no,yes"
                 answerSeparator=""/>
        </p>

        <p>
            <label>If yes, specify type and volume</label>

            <obsgroup groupingConceptId="PIH:Transfusion construct">
                <obs conceptId="PIH:Transfusion of fluid" answerConceptId="PIH:Whole blood"
                     answerLabel="Whole blood"/>
                <obs conceptId="PIH:Volume of transfusion" showUnits="true"/>


            </obsgroup>
            <obsgroup groupingConceptId="PIH:Transfusion construct">

                <obs conceptId="PIH:Transfusion of fluid"
                     answerConceptId="PIH:Packed red blood cells" answerLabel="Packed red blood cells"/>


                <obs conceptId="PIH:Volume of transfusion" showUnits="true"/>


            </obsgroup>
            <obsgroup groupingConceptId="PIH:Transfusion construct">


                <obs conceptId="PIH:Transfusion of fluid" answerConceptId="PIH:Plasma"
                     answerLabel="Plasma"/>


                <obs conceptId="PIH:Volume of transfusion" showUnits="true"/>


            </obsgroup>
            <obsgroup groupingConceptId="PIH:Transfusion construct">


                <obs conceptId="PIH:Transfusion of fluid" answerConceptId="PIH:Platelets"
                     answerLabel="Platelets"/>


                <obs conceptId="PIH:Volume of transfusion" showUnits="true"/>


            </obsgroup>
        </p>

        <p>
            <label>Fluid outputs</label>
            <label>Estimated blood loss</label>
            <obs conceptId="PIH:Estimated blood loss" showUnits="true"/>
            <label>Urine output</label>
            <obs conceptId="PIH:Urine output" showUnits="true"/>
        </p>


        <p>
            <label>Pre-operative antibiotics administered</label>

            <obs conceptId="PIH:Pre-operative antibiotic administered" style="radio"
                 answerConceptIds="PIH:NO,PIH:YES" answerLabels="no,yes"
                 answerSeparator=""/>
            <label>If yes, specify antibiotic name</label>
            <obs conceptId="PIH:Surgery antibiotics"/>

        </p>


        <p>
            <label>Venous thromboembolism prophylaxis</label>

            <obs conceptId="PIH:Venous thromboembolism prophylaxis"/>
        </p>


    </section>

    <section id="surgery" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerLabel="Pathology / Complications">


        <p>
            <label>Specimens sent</label>
        </p>


        <p>
            <label>Pathology</label>

            <obs conceptId="PIH:Pathology sample sent" style="radio" answerConceptIds="PIH:NO,PIH:YES"
                 answerLabels="no,yes" answerSeparator=""/>
            <label>If yes, describe pathology sample</label>
            <obs conceptId="PIH:Pathology sample comment"/>


        </p>

        <p>
            <label>Lab</label>

            <obs conceptId="PIH:Laboratory specimen sent" style="radio" answerConceptIds="PIH:NO,PIH:YES"
                 answerLabels="no,yes" answerSeparator=""/>
            <label>If yes, describe laboratory specimen</label>
            <obs conceptId="PIH:Laboratory specimen comment"/>


        </p>


        <p>
            <label>Implant</label>

            <obs conceptId="PIH:Insertion of implantation" style="radio" answerConceptIds="PIH:NO,PIH:YES"
                 answerLabels="no,yes" answerSeparator=""/>
            <label>If yes, specify</label>
            <obs conceptId="PIH:Implantation comment"/>

        </p>


        <p>
            <label>Complications</label>

            <obs conceptId="PIH:Complications from surgery"/>

        </p>

    </section>

    <section id="surgery" sectionTag="fieldset" headerTag="legend" headerStyle="title" headerLabel="Plan">


        <p>
            <label>Disposition</label>

            <obs conceptId="PIH:Post-surgery disposition location"/>

        </p>


        <p>
            <label>Findings/Description</label>

            <obs conceptId="PIH:Additional Surgery Comments" style="textarea" rows="4" cols="80"/>
        </p>


    </section>
    <br />
    <submit/>

</htmlform>